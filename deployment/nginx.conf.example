# Nginx Configuration Example for DD Scheduler Bot
#
# This configuration provides:
# - HTTPS termination with Let's Encrypt certificates
# - Reverse proxy to Waitress backend
# - Security headers
# - File upload support (up to 50MB)
#
# Usage:
# 1. Replace 'yourdomain.com' with your actual domain
# 2. Set up SSL certificates (see certbot instructions below)
# 3. Copy to /etc/nginx/sites-available/dd-scheduler
# 4. Link: sudo ln -s /etc/nginx/sites-available/dd-scheduler /etc/nginx/sites-enabled/
# 5. Test: sudo nginx -t
# 6. Reload: sudo systemctl reload nginx

# HTTP - Redirect to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name yourdomain.com www.yourdomain.com;

    # Redirect all HTTP traffic to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name yourdomain.com www.yourdomain.com;

    # SSL Configuration (Let's Encrypt)
    # Generate with: sudo certbot certonly --nginx -d yourdomain.com -d www.yourdomain.com
    ssl_certificate /etc/letsencrypt/live/yourdomain.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/yourdomain.com/privkey.pem;

    # SSL Settings (modern configuration)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    # HSTS (comment out if testing)
    add_header Strict-Transport-Security "max-age=63072000" always;

    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # File upload size (match Flask config)
    client_max_body_size 50M;

    # Logging
    access_log /var/log/nginx/dd-scheduler.access.log;
    error_log /var/log/nginx/dd-scheduler.error.log;

    # Proxy to Waitress backend
    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support (if needed in future)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts for long-running requests (schedule generation)
        proxy_connect_timeout 60s;
        proxy_send_timeout 120s;
        proxy_read_timeout 120s;
    }

    # Static files (optional - Flask can serve these, but nginx is faster)
    # Uncomment if you want nginx to serve static files directly
    # location /static/ {
    #     alias /path/to/dd-scheduler-bot/backend/static/;
    #     expires 30d;
    #     add_header Cache-Control "public, immutable";
    # }
}

# ============================================================
# SETUP INSTRUCTIONS
# ============================================================
#
# 1. Install nginx:
#    sudo apt update && sudo apt install nginx
#
# 2. Install certbot for Let's Encrypt:
#    sudo apt install certbot python3-certbot-nginx
#
# 3. Get SSL certificate:
#    sudo certbot certonly --nginx -d yourdomain.com -d www.yourdomain.com
#
# 4. Copy this config:
#    sudo cp nginx.conf.example /etc/nginx/sites-available/dd-scheduler
#    sudo nano /etc/nginx/sites-available/dd-scheduler
#    # Edit: Replace 'yourdomain.com' with your domain
#
# 5. Enable the site:
#    sudo ln -s /etc/nginx/sites-available/dd-scheduler /etc/nginx/sites-enabled/
#
# 6. Test and reload:
#    sudo nginx -t
#    sudo systemctl reload nginx
#
# 7. Set up auto-renewal:
#    sudo certbot renew --dry-run
#
# 8. Start the Flask app:
#    cd /path/to/dd-scheduler-bot
#    python run_production.py
#
# For production, consider using systemd to manage the Flask app:
# See deployment/dd-scheduler.service.example
